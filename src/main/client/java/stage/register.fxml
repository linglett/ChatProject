<AnchorPane prefHeight="500.0" prefWidth="740.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.java.controller.ControllerRegister">
    <children>
        <VBox layoutX="453.0" layoutY="1.0" prefHeight="507.0" prefWidth="300.0" style="-fx-background-color: #2E323B; -fx-border-image-repeat: #2E323B;">
            <children>
                <Label prefHeight="153.0" prefWidth="298.0" text="      Welcome！" textAlignment="CENTER" textFill="#07c0f0">
                    <font>
                        <Font name="Microsoft JhengHei Light" size="36.0" />
                    </font>
                </Label>
            </children>
        </VBox>
        <Label layoutX="51.0" layoutY="41.0" prefHeight="35.0" prefWidth="144.0" text="User Register">
            <font>
                <Font size="21.0" />
            </font>
        </Label>
        <HBox fx:id="registerNickNameHbox" layoutX="51.0" layoutY="102.0" prefHeight="37.0" prefWidth="342.0" style="-fx-border-color: #BEBFC1; -fx-border-radius: 5px; -fx-background-radius: 5px;">
            <children>
                <TextField fx:id="registerNickName" onAction="#textfiledregisternickname" prefHeight="40.0" prefWidth="340.0" promptText="Nickname" style="-fx-background-color: transparent;" />
            </children>
        </HBox>
        <HBox fx:id="registerpasswordHbox" layoutX="51.0" layoutY="158.0" prefHeight="37.0" prefWidth="342.0" style="-fx-border-color: #BEBFC1; -fx-border-radius: 5px; -fx-background-radius: 5px;">
            <children>
                <TextField fx:id="registerPassword" onAction="#textfiledregisterpassword" prefHeight="37.0" prefWidth="340.0" promptText="Password" style="-fx-background-color: transparent;" />
            </children>
        </HBox>
        <Button fx:id="btregister" layoutX="51.0" layoutY="340.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#registerButtonAction" prefHeight="45.0" prefWidth="115.0" text="Sign up now">
            <font>
                <Font name="Microsoft Tai Le" size="15.0" />
            </font>
        </Button>
        <HBox fx:id="registeremailHbox" layoutX="51.0" layoutY="211.0" prefHeight="37.0" prefWidth="342.0" style="-fx-border-color: #BEBFC1; -fx-border-radius: 5px; -fx-background-radius: 5px;">
            <children>
                <TextField fx:id="registerEmail" onAction="#textfiledregisteremail" prefHeight="37.0" prefWidth="340.0" promptText="Email" style="-fx-background-color: transparent;" />
            </children>
        </HBox>
        <HBox fx:id="registerverificationHbox" layoutX="51.0" layoutY="261.0" prefHeight="37.0" prefWidth="144.0" style="-fx-border-color: #BEBFC1; -fx-border-radius: 5px; -fx-background-radius: 5px;">
            <children>
                <TextField fx:id="registerVerification" onAction="#textfiledregisterverification" prefHeight="35.0" prefWidth="200.0" promptText="Verification Code" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <Button layoutX="222.0" layoutY="257.0" mnemonicParsing="false" onAction="#getCode" prefHeight="45.0" prefWidth="170.0" text="获取验证码" />
    </children>
</AnchorPane>
